{% extends "base.jinja2" %}
{% block content %}
<div class="row">
          <div class="col-lg-9 col-lg-offset-2">
            <div class="well bs-component">
              <form action="{{ url_for('fixes.feedback', fix=fix._id) }}" class="form-horizontal" method="post">
                <fieldset>
                  <legend>FEEDBACK - FIX</legend>

                  <div class="form-group">
                    <div class="col-lg-12">
                      <span class="help-block">Explain why this fix failed</span>
                      <textarea class="form-control" rows="4" id="textFeedback" name="textFeedback"></textarea>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-lg-12">
                      <span class="help-block">Describe a new FIX to get a solution </span>
                      <textarea class="form-control" rows="4" id="textNewTask" name="textNewTask"></textarea>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-4">
                      <button formaction="/tasks/test/{{ get_rack(fix.rack)._id }}" class="btn btn-default">Cancel</button>
                      <button type="submit" class="btn btn-warning">ADD FIX</button>
                    </div>
                  </div>
                </fieldset>
              </form>
            </div>
          </div>
</div>

{% endblock %}