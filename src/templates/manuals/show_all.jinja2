{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Select a Manual to dowload...</h1>
    </div>
<div class="bs-component">
    <table class="table table-striped table-hover transbox">
    <thead>
        <tr class="warning">
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for manual in manuals %}
        <tr class="active">
            <td><span class="glyphicon glyphicon-menu-right"></span>  {{ manual.file_name }}</td>
            <td>{{ manual.description }}</td>
            {% if session['email'] == "oescobedo@lenovo.com" %}
            <td><p class="bs-component">
                    <a href="{{ url_for('manuals.continue_test', rack=rack._id) }}" class="btn btn-danger">Delete</a>
                </p></td>
            {% endif %}
        </tr>
    {% endfor %}
    </tbody>
    </table>
</div>
    <!--<a class="btn btn-success" href="{{ url_for('manuals.create_manual') }}"><span class="glyphicon glyphicon-plus"></span> Create new</a> -->
{% endblock %}