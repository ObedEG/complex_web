{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Select a Manual to dowload...</h1>
    </div>
    <div class="list-group">
        {% for manual in manuals %}
            <a href="{{ url_for('manuals.download', file_name=manual.file_name) }}" class="list-group-item">
                <h4 class="list-group-item-heading">
                    <span class="glyphicon glyphicon-remove-circle"></span> File: {{ manual.file_name }} </h4>
                <p class="list-group-item-text"> Description : <strong> {{ manual.description }}</strong></p></a>
        {% endfor %}
    </div>
    <!--<a class="btn btn-success" href="{{ url_for('manuals.create_manual') }}"><span class="glyphicon glyphicon-plus"></span> Create new</a> -->
{% endblock %}