{% extends "base.jinja2" %}
{% block content %}
<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1 id="forms">Please explain what is the problem or delay: </h1>
    </div>
  </div>
</div>

<div class="row">
          <div class="col-lg-9 col-lg-offset-2">
            <div class="well bs-component">
              <form class="form-horizontal" method="post">
                <fieldset>
                  <legend>FAILURE REPORT</legend>

                  <div class="form-group">
                    <div class="col-lg-12">
                      <textarea class="form-control" rows="4" id="textArea" name="text"></textarea>
                      <span class="help-block">Describe what is happening (> 20 Characters) </span>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-4">
                      <button formaction="/tasks/test/{{rack}}" class="btn btn-default">Cancel</button>
                      <button type="submit" class="btn btn-danger">Submit</button>
                    </div>
                  </div>
                </fieldset>
              </form>
            </div>
          </div>
</div>

{% endblock %}