{% extends "csc/csc_base.jinja2" %}
{% block content %}

<div class="container">

    <div class="dashhead">
      <div class="dashhead-titles">
        <h6 class="dashhead-subtitle">Complex Web</h6>
      </div>
    </div>

        <hr class="mt-0 mb-5">

    <h4 id="flex-table">CSC - Truven Order</h4>


    <br>
     <p> VM - mgt22 (172.15.0.22) </p>
     <p>STATUS: {{ ping_device('172.15.0.22') }}</p>
     <br>

    <hr>

    <br>
    <p> SWITCH SETTINGS </p>

        <div class="row">
            <div class="col-lg-12">
                <div class="bs-component">

                      <table class="table">
                          <thead>
                              <tr>
                                <th>Hostname</th>
                                <th>IP</th>
                                <th>STATUS</th>
                              </tr>
                          </thead>
                          <tbody>
                              <tr>
                                <td><strong> switch1 </strong></td>
                                <td> 172.30.50.1 </td>
                                <td> {{ ping_device('172.30.50.1') }} </td>
                              </tr>
                          </tbody>
                      </table>
                </div>
            </div>
        </div>

    <hr> <!--- NODES DEFINED at /data/CSC/truven/workarea/  --->

    <p> Workarea SO : {{ get_workarea_so() }}</p>

        <div class="row">
            <div class="col-lg-12">
                <div class="bs-component">

                      <table class="table">
                          <thead>
                              <tr>
                                  <th>Serial Number</th>
                                <th>Hostname</th>
                                <th>IP</th>
                                <th>SUBNET</th>
                                <th>GATEWAY</th>
                              </tr>
                          </thead>
                          <tbody>

                          {% for unit in get_workarea_units_dict() %}
                              <tr>
                                <td><strong> {{ unit['serial'] }} </strong></td>
                                <td> {{ unit['hostname'] }} </td>
                                <td> {{ unit['ip'] }} </td>
                                <td> {{ unit['subnet'] }}</td>
                                <td> {{ unit['gateway'] }}</td>
                              </tr>
                          {% endfor %}
                          </tbody>
                      </table>
                </div>
            </div>
        </div>
