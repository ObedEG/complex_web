{% extends "csc/csc_base.jinja2" %}
{% block content %}

NUTANIX - CIGNA

<div class="row">
    <div class="col-lg-6">
            <div class="bs-component">
                <table class="table table-striped table-hover ">
                    <thead>
                      <tr class="info">
                        <th><h4>HV hostname</h4></th>
                        <th><h4>HV IP</h4></th>
                        <th><h4>IMM Hostname</h4></th>
                        <th><h4>IMM IP</h4></th>
                        <th><h4>CVM Name</h4></th>
                        <th><h4>CVM IP</h4></th>
                        <th><h4>Storage IP</h4></th>
                        <th><h4></h4></th>
                      </tr>
                    </thead>
                    {% for node in nodes %}
                    <tr class="active">
                        <td>{{ node.hv_name }}</td>
                        <td>{{ node.hv_ip }}</td>
                        <td>{{ node.imm_name }}</td>
                        <td>{{ node.imm_ip }}</td>
                        <td>{{ node.cvm_name }}</td>
                        <td>{{ node.cvm_ip }}</td>
                        <td>{{ node.storage_ip }}</td>
                        <td></td>
                    </tr>
                    {% endfor %} <!-- End list of nodes... -->
                </table>
            </div>
    </div>
</div>



</div>

{% endblock %}