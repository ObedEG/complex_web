{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>RACK {{ rack.rackid }}</h1>
        <h2> Customer: {{ rack.customer }} || LeROM: {{ rack.lerom }}</h2>
    </div>

List of task of this rack

    <div class="list-group">
        {% for task in tasks %}

            <a href="{{ url_for('racks.rdns_rack', lerom=rack.lerom, rackid=rack.rackid) }}" class="list-group-item">
                <h4 class="list-group-item-heading">
                    <span class="glyphicon glyphicon-remove-circle"></span> Task {{ task.category }} </h4>
                <p class="list-group-item-text"><strong></strong></br>
                    Description: <strong>{{ task.description }}</strong></p></a>
        {% endfor %}
    </div>
    <a class="btn btn-success" href="{{ url_for('racks.create_rack') }}"><span class="glyphicon glyphicon-plus"></span> Create new</a>
{% endblock %}