{% extends "base.jinja2" %}
{% block content %}
<div class="content container fullservers" style="height:100%">


            {% if session['email'] %}

    <div class="row transbox">
        <div class="col-lg-4">
            <div class="bs-component">
              <div class="well well-lg">
                  <h3><font face="verdana" color="green"> WELCOME {{ session['email'] }}</font></h3>
                <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
              </div>
            </div>
          </div>
    </div>
            {% else %}
        <div class="jumbotron transbox">
            <h1>ComplexWEB</h1>
            <p>Monitoring Rack Orders under test...</p>
            <div class="form-size">
                    <span class="help-block">Sign in ... <small>[ Admin:  oescobedo@lenovo.com ]<small></small></span>

                    <form action="{{ url_for('users.login_user') }}" method="post">
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-default">Log in</button>
                    </form>
                </div>
            {% endif %}
    </div>
</div>
{% endblock %}