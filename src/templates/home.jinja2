{% extends "base.jinja2" %}
{% block content %}
<div class="content container fullservers" style="height:100%">
    <div class="jumbotron transbox">
        <h1>ComplexWEB</h1>
            <p>Monitoring Rack Orders under test...</p>

            {% if session['email'] %}
            <p><font face="verdana" color="green"> WELCOME {{ session['email'] }}</font></p>
            {% else %}
                <div class="form-size">
                    <span class="help-block">Sign in... To register a TE User Account please contact: oescobedo@lenovo.com</span>

                    <form action="{{ url_for('users.login_user') }}" method="post">
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-default">Log in</button>
                    </form>
                </div>
            {% endif %}
    </div>
</div>
{% endblock %}